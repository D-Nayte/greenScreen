{
    "name": "green-screen-app",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "nodemon server.ts --dev",
        "prebuild": "node scripts/removeOldDist.js && tsc && npm run files:copy",
        "build": "next build",
        "start:appOld": "node --loader ts-node/esm --experimental-specifier-resolution=node --experimental-json-modules --no-warnings server.ts --prod",
        "start:old": "npm run build && (npm run start:app&)",
        "start:app": "node ./dist/server.js --prod",
        "prestart": "npm i && npm run build",
        "start": "pm2 list && pm2 start ecosystem.config.cjs --env production",
        "files:copy": "node scripts/copyFiles.js",
        "py:venv": "python3 -m venv pythonVirtual",
        "py:adc": "pythonVirtual/bin/python3 sensor/adc.py",
        "pm2:kill": "pm2 kill",
        "pm2:monit": "pm2 monit",
        "pm2:log": "pm2 log",
        "lint": "next lint"
    },
    "dependencies": {
        "@radix-ui/react-accordion": "^1.1.2",
        "@radix-ui/react-dialog": "^1.0.5",
        "@radix-ui/react-dropdown-menu": "^2.0.6",
        "@radix-ui/react-icons": "^1.3.0",
        "@radix-ui/react-label": "^2.0.2",
        "@radix-ui/react-select": "^2.0.0",
        "@radix-ui/react-slider": "^1.1.2",
        "@radix-ui/react-slot": "^1.0.2",
        "@radix-ui/react-switch": "^1.0.3",
        "@radix-ui/react-tabs": "^1.0.4",
        "@types/express": "^4.17.21",
        "@types/node": "^20.12.12",
        "axios": "^1.7.2",
        "bme280-sensor": "^0.1.7",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "concurrently": "^8.2.2",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "i2c-bus": "^5.2.3",
        "next": "14.2.3",
        "nodemon": "^3.1.0",
        "pm2": "^5.4.0",
        "react": "^18",
        "react-dom": "^18",
        "react-icons": "^5.2.1",
        "socket.io": "^4.7.5",
        "socket.io-client": "^4.7.5",
        "tailwind-merge": "^2.3.0",
        "tailwindcss-animate": "^1.0.7",
        "ts-node": "^10.9.2",
        "ws": "^8.17.0",
        "zustand": "^4.5.2"
    },
    "devDependencies": {
        "@types/i2c-bus": "^5.1.2",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@types/rpi-gpio": "^2.1.4",
        "eslint": "^8",
        "eslint-config-next": "14.2.3",
        "postcss": "^8",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.4.5"
    }
}
